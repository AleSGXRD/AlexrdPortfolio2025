---

<section id="projects" class=" grid grid-cols-1 px-4 lg:grid-cols-5 max-w-7xl w-full mx-auto justify-center text-gray-100
        gap-8">
    <h3 class="mx-8 lg:mx-4 slide-up text-2xl font-medium text-right">Proyectos</h3>
    <hr class="lg:hidden border-[0.5px] text-zinc-400 mx-8">

    <div class="lg:col-span-4 border-l-[0.5px] border-zinc-400">
        {
            projects.map((project:any)=> (
                <>
                    <Project 
                        {icon}={project.icon}
                        {title}={project.title}
                        {link}={project.link}
                        {linkType}={project.linkType}
                        {description}={project.description}
                        {technologies}={project.technologies}
                        {images}={project.images}
                    />
                    <hr class="border-[0.5px] text-zinc-400 mx-8">
                </>
            ))
        }
    </div>
</section>

