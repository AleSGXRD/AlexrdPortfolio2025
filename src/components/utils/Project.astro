        <div class="flex flex-row gap-4 items-center">
            <img src={icon} alt="" class="rounded-sm h-8 w-8">
            <a class="flex flex-row gap-2 tracking-tight text-lg hover:text-[#FF7D5C] transition-colors " href={link}>
                {title}
