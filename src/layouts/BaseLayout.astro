<script>
document.addEventListener('DOMContentLoaded', () => {
  const header = document.querySelector('header');
  const scrollDiv = document.getElementById('scroll-div');

  window.addEventListener('scroll', () => {
    if (window.scrollY > 250) {
      // Muestra el div adicional cuando el scroll supera 100px
      scrollDiv?.classList.remove('hidden');
    } else {
      // Oculta el div si el scroll está por debajo de 100px
      scrollDiv?.classList.add('hidden');
    }
  });
});
</script>

<style>
  /* Estilo para el div adicional */
  #scroll-div {
    display: none; /* Oculto por defecto */
  }

  #scroll-div:not(.hidden) {
    display: block; /* Visible cuando no tiene la clase 'hidden' */
  }

</style>